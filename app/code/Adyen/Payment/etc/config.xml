        <payment>
            <adyen_cc>
                <active>1</active>
                <model>Adyen\Payment\Model\Method\Cc</model>
                <order_status>pending</order_status>
                <title>Adyen</title>
                <recurring_type>ONECLICK</recurring_type>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
